<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Animation.Bottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/in_from_down</item>
        <item name="android:windowExitAnimation">@anim/out_to_down</item>
    </style>

    <!--底部弹框-->
    <style name="Fragment.Dialog" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
