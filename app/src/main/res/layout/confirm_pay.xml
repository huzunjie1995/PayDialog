<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_confirm_bar"
        android:layout_width="match_parent"
        android:layout_height="59dp">

        <ImageView
            android:id="@+id/iv_dialog_dismiss"
            android:layout_width="34sp"
            android:layout_height="34sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:padding="10dp"
            android:src="@drawable/dialog_dismiss" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="确认付款"
            android:textColor="#333333"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#F2F2F2" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_confirm_order"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@+id/rl_confirm_bar"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="订单信息"
            android:textColor="#999999"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="账户充值"
            android:textColor="#666666"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#F2F2F2" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_confirm_pay_channel"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@+id/rl_confirm_order"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="支付方式"
            android:textColor="#999999"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_confirm_pay_channel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:drawableEnd="@drawable/right_arrow"
            android:drawablePadding="8dp"
            android:text="支付宝"
            android:textColor="#666666"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_confirm_pay_channel_logo"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/tv_confirm_pay_channel_name"
            android:src="@drawable/pay_channel_ali" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#F2F2F2" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_confirm_order_money"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@id/rl_confirm_pay_channel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp">

        <TextView
            android:id="@+id/tv_confirm_order_money_cny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:includeFontPadding="true"
            android:text="￥"
            android:textColor="#333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_confirm_order_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_confirm_order_money_cny"
            android:includeFontPadding="true"
            android:text="500.00"
            android:textColor="#333333"
            android:textSize="40sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_dialog_confirm_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/confirm_submit_radius_bg"
            android:text="确认付款"
            android:textColor="#2DBB64"
            android:textSize="18sp" />

    </RelativeLayout>

</RelativeLayout>
